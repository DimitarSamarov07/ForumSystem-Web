@model  ForumSystem.Web.ViewModels.Profile.ProfileListModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    List of all users
</div>

<div class="row">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Username</th>
                <th>Email</th>
                <th>Member Since</th>
                <th>Rating </th>
            </tr>
        </thead>
        <tbody>
            @foreach( var user in Model.Profiles)
            {
                <tr>
                    <td><img  src="@user.ProfileImageUrl" class="img-circle-list-profiles"/></td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.MemberSince</td>
                    <td>@user.UserKarmaPoints</td>
                </tr>
            }
        </tbody>
    </table>

</div>