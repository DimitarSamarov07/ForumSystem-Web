@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@using ForumSystem.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Details" asp-route-id="@this.UserManager.GetUserId(User)">Hello @User.Identity.Name!</a>
        </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="dropdown show">
                <a href="#" class="btn  dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings</a>
                <ul class="dropdown-menu">
                    <div role="separator" class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-area="Administration" asp-controller="Category" asp-action="Index">Open Admin Panel</a>
                </ul>
            </li>
            <li class="nav-item">
                <a href="/Identity/Account/Logout" class="nav-link btn btn-link text-dark">Logout</a>
            </li>
        }

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Identity/Account/Register?returnUrl=@Context.Request.Path">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Identity/Account/Login?returnUrl=@Context.Request.Path">Login</a>
        </li>
    }
</ul>