@model ForumSystem.Web.ViewModels.Documents.DocumentEditModel
<section class="content-header">
    <h1>
        Categories
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit @Model.Title</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form asp-controller="Document" asp-action="Edit" asp-route-id="@Model.DocumentId" class="form-horizontal" method="post" enctype="multipart/form-data">
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="Content" class="col-sm-2 control-label">New Document Description</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Content" class="form-control" id="mytextarea">@Model.Content</textarea>
                    </div>
                </div>
                <input type="hidden" asp-for="DocumentId" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>

@section Scripts{
<script src="~/lib/tinymce/tinymce.min.js"></script>
<script type="text/javascript">

    tinymce.init({
        selector: '#mytextarea',
        height: "480",
        plugins: [
            "image paste table link code media"
        ]
    });

</script>
}