@model ForumSystem.Web.ViewModels.Categories.EditCategoryModel
<section class="content-header">
    <h1>
        Categories
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit Category</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form asp-controller="Category" asp-action="Edit" asp-route-id="@Model.CategoryId" class="form-horizontal" method="post" enctype="multipart/form-data"  >
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="CategoryTitle" class="col-sm-2 control-label">New Category Title</label>
                    <div class="col-sm-10">
                        <input asp-for="CategoryTitle"  class="form-control" placeholder="Title"  value="@Model.CategoryTitle">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryDescription" class="col-sm-2 control-label">New Category Description</label>
                    <div class="col-sm-10">
                        <input asp-for="CategoryDescription" class="form-control" placeholder="Name" value="@Model.CategoryDescription">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">New Category Image</label>
                    <div class="col-sm-10">
                        <input asp-for="NewImage" class="btn btn-dark" typeof="file" />
                        <br />
                        <p class="text-danger">Make sure to use high-resolution images with aspect ratio 16:9</p>
                        <br />
                    </div>
                </div>
                <input type="hidden" asp-for="CategoryId" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>